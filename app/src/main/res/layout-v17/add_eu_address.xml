<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contents_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/region_title"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="219dp"
        android:gravity="center"
        android:text="Country"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_16ssp" />

    <LinearLayout
        android:id="@+id/region_container"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/region_title"
        android:layout_centerHorizontal="true"
        android:background="#50D3D3D3">

        <TextView
            android:id="@+id/ref_name"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/drop"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_20sdp"
            android:padding="@dimen/_7sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/city_title"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:text="City/Town/Village"
        android:textColor="@color/secondaryColor"
        android:textSize="@dimen/_16ssp" />

    <EditText
        android:id="@+id/city_text"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/city_title"
        android:layout_centerHorizontal="true"
        android:background="#50D3D3D3"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:textColor="@android:color/white" />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Back"
            android:layout_weight="1"
            android:background="@drawable/border_right"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Submit"
            android:layout_weight="1"
            android:background="@color/toolbarColor"
            android:textColor="@android:color/white" />
    </LinearLayout>



</RelativeLayout>