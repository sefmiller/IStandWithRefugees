
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"

        >


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_edit_text_two"
            >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Regions"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2"
        android:background="#50D3D3D3"
        >

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_220sdp"
            android:padding="@dimen/_5sdp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/dialog_listview"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_below="@+id/search_list_one"
            />

        <Button
            android:id="@+id/next_button"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_18ssp"
            android:text="Ok"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/dialog_listview"
            android:background="@color/toolbarColor"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    </RelativeLayout>
