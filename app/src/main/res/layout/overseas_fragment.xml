<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/overseasview1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/overseasimg1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/overseastext1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="List Charities Overseas"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_below="@+id/overseasimg1"
                        android:layout_alignLeft="@+id/overseasimg1"
                        android:layout_alignStart="@+id/overseasimg1" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/overseasview2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/overseasimg2"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/overseastext2"
                        android:text="Add Charity Overseas"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/overseasimg2"
                        android:layout_alignLeft="@+id/overseasimg2"
                        android:layout_alignStart="@+id/overseasimg2" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/overseasview3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/overseasimg3"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp" />
                    <TextView
                        android:id="@+id/overseastext3"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Updates On the Ground"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_below="@+id/overseasimg3"
                        android:layout_alignLeft="@+id/overseasimg3"
                        android:layout_alignStart="@+id/overseasimg3" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/overseasview4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/overseasimg4"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp" />
                    <TextView
                        android:id="@+id/overseastext4"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:text="Favourites"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_below="@+id/overseasimg4"
                        android:layout_alignLeft="@+id/overseasimg4"
                        android:layout_alignStart="@+id/overseasimg4" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rvButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/ukview5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/ukimg5"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp" />
                    <TextView
                        android:id="@+id/uktext5"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_below="@+id/ukimg5"
                        android:layout_alignLeft="@+id/ukimg5"
                        android:layout_alignStart="@+id/ukimg5" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ukviews1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#E7E7E7"
                android:padding="@dimen/_1sdp">
                <RelativeLayout
                    android:id="@+id/ukview6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFFFFF">
                    <ImageView
                        android:id="@+id/ukimg6"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:id="@+id/uktext6"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:textAppearance="@style/icons_text"
                        android:layout_below="@+id/ukimg6"
                        android:layout_alignLeft="@+id/ukimg6"
                        android:layout_alignStart="@+id/ukimg6" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>