<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edit_text_marker">


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text_two">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/nat_circle_image_view"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@android:color/transparent"
                app:civ_fill_color="@android:color/holo_red_light"
                app:civ_border_color="@color/secondaryColor"
                app:civ_border_width="@dimen/_2sdp" />

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/info_win_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/nat_circle_image_view"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_10sdp"
                android:text="a namejjjjjjjjjj"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textIsSelectable="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50D3D3D3"
            android:layout_below="@id/relativeLayout2"
            >

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/info_win_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:textAlignment="center"
                android:lines="10"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="STto sales to dsdsd sdsds sdsd s sds dsdsfdfd fedfdf dfd
            fdfd dfdf dfd df d fd speaker events there is scope for anyone to be involved! "
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:layout_below="@id/info_win_desc"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:text="See More...." />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>