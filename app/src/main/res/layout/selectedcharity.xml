<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/editText5"
        android:layout_toStartOf="@+id/editText5"
        android:text="View on Map" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="32dp"
        app:srcCompat="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/editText13"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/editText5"

        android:layout_alignRight="@+id/editText5"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Menu"
        android:textSize="@dimen/_12ssp"
        tools:text="Email Address" />

    <TextView
        android:id="@+id/editText8"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_30sdp"
        android:ems="10"
        android:inputType="textPersonName"

        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Menu"
        android:textSize="@dimen/_12ssp"
        tools:text="Website address"
        android:layout_below="@+id/editText13"
        android:layout_alignLeft="@+id/editText13"
        android:layout_alignStart="@+id/editText13" />

    <TextView
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="9"
        android:inputType="textPersonName"
        android:text="Charity Name *"
        android:textSize="@dimen/_18ssp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@android:color/holo_green_light"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@android:color/holo_green_light"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignRight="@+id/editText4"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="@dimen/_285sdp"
        android:layout_height="@dimen/_160sdp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:text="Describe the Charity*"
        tools:textSize="@dimen/_14ssp"
        tools:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
