
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"

        >


        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/rounded_edit_text_two"
            >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Durham Art Exhibition"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp" />

        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:layout_below="@id/relativeLayout2"
        >
        <android.support.v7.widget.SearchView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/rightleftborder"
            android:id="@+id/search_list_one"
            android:layout_below="@+id/address"
            />
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rounded_edit_text_six"
            android:id="@+id/dialog_listview"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_below="@+id/search_list_one"
            />

    </RelativeLayout>
    </RelativeLayout>
